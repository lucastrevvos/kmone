{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "scripts"],
  "exclude": ["dist", "node_modules"]
}
