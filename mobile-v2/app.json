{
  "expo": {
    "name": "mobile-v2",
    "slug": "mobile-v2",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "O KM One usa sua localização para calcular os quilômetros rodados durante a corrida.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "O KM One pode continuar medindo os quilômetros mesmo quando o app estiver em segundo plano (opcional)."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.lucastrevvos.mobilev2"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "./plugins/fix-mainapplication",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir que o KM One acesse sua localização para calcular os quilômetros rodados.",
          "locationWhenInUsePermission": "Permitir que o KM One use sua localização enquanto estiver aberto."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "2.0.21",
            "gradleProperties": {
              "expo.kspVersion": "2.0.21-1.0.28"
            }
          }
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "50d9be07-de3e-4e39-ba97-a77a5dd3b090"
      }
    }
  }
}
